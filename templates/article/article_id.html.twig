{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    {# test si l'article vaut null #}
    {% if article is null %}
        <p>L'article n'existe pas</p>
    {# sinon on affiche l'article #}
    {% else %}
    <div class="py-8 px-4 lg:w-1/3">
        <div class="h-full flex items-start">
          <div class="w-12 flex-shrink-0 flex flex-col text-center leading-none">
            <span class="text-gray-500 pb-2 mb-2 border-b-2 border-gray-200">{{ article.creationdate|date('d m')}}</span>
            <span class="font-medium text-lg text-gray-800 title-font leading-none">{{ article.creationdate|date('Y')}}</span>
          </div>
          <div class="flex-grow pl-6">
            <h2 class="tracking-widest text-xs title-font font-medium text-red-500 mb-1"> 
            {% for categorie in article.categories %}
                {{ categorie.name|capitalize }}
            {% endfor %}</h2>
            <h1 class="title-font text-xl font-medium text-gray-900 mb-3">{{ article.title|capitalize }}</h1>
            <p class="leading-relaxed mb-5">{{ article.content }}</p>
            <a class="inline-flex items-center">
              <img alt="blog" src="https://dummyimage.com/103x103" class="w-8 h-8 rounded-full flex-shrink-0 object-cover object-center">
              <span class="flex-grow flex flex-col pl-3">
                <span class="title-font font-medium text-gray-900">{{ article.user.firstname|capitalize}} {{ article.user.lastname|capitalize }}</span>
                <span class="title-font font-medium text-gray-900"><a href="/article/all">Retour</a></span>
              </span>
            </a>
          </div>
        </div>
      </div>
    {% endif %}
{% endblock %}
